{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/stories"]
}
